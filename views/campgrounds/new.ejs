<% layout("layouts/boilerplate") %>
<div class="row mb-5">
  <h1 class="text-center">Add Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="validateForm"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label><br />
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          placeholder="Campground Name"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location:</label><br />
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          placeholder="Campground location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3 custom-file">
        <label class="form-label custom-file-label" for="image" id="image"
          >Upload Image(s):</label
        ><br />

        <input
          type="file"
          name="image"
          id="image"
          class="form-control custom-file-input"
          multiple
        />

        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price:</label><br />

        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.0"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            id="price"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label><br />
        <textarea
          name="campground[description]"
          id="description"
          cols="30"
          rows="4"
          placeholder="Campground description"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <button type="submit" class="btn btn-success">Add Campground</button>
      </div>
    </form>

    <a href="/campgrounds" class="btn btn-primary">All campgrounds</a>
  </div>
</div>
