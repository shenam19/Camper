<% layout("layouts/boilerplate") %>
<% layout("layouts/boilerplate") %>
<div class="container d-flex-justify-content-center align-items-center">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow mb-5">
        <img src="https://images.unsplash.com/photo-1563299796-17596ed6b017?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="camp image" class="card-img-top">
        <div class="card-body">
          <h3 class="card-title">Register</h3>
         
          <form action="/register" method="post" novalidate class="validateForm">
            <div class="mb-3">
              <label class="form-label" for="username">Username:</label><br />
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                placeholder="Enter Username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
      
            <div class="mb-3">
              <label class="form-label" for="password">Password:</label><br />
              <input
                class="form-control"
                type="password"
                name="password"
                id="password"
                placeholder="Enter password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
      
            <div class="mb-3">
              <label class="form-label" for="email">Email:</label><br />
              <input
                class="form-control"
                type="email"
                name="email"
                id="email"
                placeholder=" Email"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
      
            <div class="mb-3 d-grid">
              <button type="submit" class="btn btn-success">Signup</button>
            </div>
          </form>
        </div>
      </div>
    </div>
      
    </div>
  </div>
</div>


